{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib/",
        "target": "ES2020",
        "noImplicitAny": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "es5",
            "es6",
            "dom"
        ],
        "types": [
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}
